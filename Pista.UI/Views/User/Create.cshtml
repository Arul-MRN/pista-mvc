@model UserViewModel
@{
    ViewData["Title"] = "Create User";
}

<div id="contentDiv" class="cleanContentDiv box-offset pt-0">
    <div class="row justify-content-center">
        <div class="col-12 col-md-6 col-lg-4">
            <div class="card">
                <div class="card-body">
                    <form method="post">

                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group ">
                            <label asp-for="Category" class="control-label">Category : </label>
                            @*<input asp-for="Gender" class="form-control" />*@

                            <input type="radio" name="Category" value="A" /> Admin
                            <input type="radio" name="Category" value="E" /> Employee

                            <span asp-validation-for="Category" class="text-danger"></span>
                        </div>
                        <div class="form-floating mt-2">
                            <input asp-for="UserId" class="form-control" />
                            <label asp-for="UserId" class="form-label"> User Id</label>
                            <span asp-validation-for="UserId" class="text-danger"></span>
                        </div>
                        <div class="form-floating mt-2">
                            <input asp-for="Name" class="form-control" />
                            <label asp-for="Name" class="form-label"></label>
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-floating mt-2">
                            <input asp-for="Designation" class="form-control" />
                            <label asp-for="Designation" class="form-label"></label>
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-floating mt-2">
                            <input asp-for="Email" class="form-control" />
                            <label asp-for="Email" class="form-label"></label>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-floating mt-2">
                            <input asp-for="Mobile" class="form-control" />
                            <label asp-for="Mobile" class="form-label">Mobile No</label>
                            <span asp-validation-for="Mobile" class="text-danger"></span>
                        </div>
                        

                        <div class="form-floating mt-2">
                            <input asp-for="Password" class="form-control" />
                            <label asp-for="Password" class="form-label"></label>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="form-floating mt-2">
                            <input asp-for="ConfirmPassword" class="form-control" />
                            <label asp-for="ConfirmPassword" class="form-label">Confirm Password</label>
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>

                        <div class="text-center mt-3">
                            <button type="submit" class="btn btn-lg btn-primary">Submit</button>
                        </div>

                    </form>
                </div>
            </div>
            </div>
    </div>
   
</div>